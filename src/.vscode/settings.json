{
    // Editor
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderIndicators": false,
    "diffEditor.renderSideBySide": true,
    "editor.autoClosingBrackets": true,
    "editor.autoIndent": true,
    "editor.colorDecorators": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "line-thin",
    "editor.detectIndentation": true,
    "editor.dragAndDrop": true,
    "editor.emptySelectionClipboard": true,
    "editor.folding": true,
    "editor.foldingStrategy": "auto",
    "editor.fontFamily": "Monaco",
    "editor.fontLigatures": false,
    "editor.fontSize": 12,
    "editor.fontWeight": "normal",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.glyphMargin": true,
    "editor.insertSpaces": true,
    "editor.largeFileOptimizations": true,
    "editor.letterSpacing": 0,
    "editor.lightbulb.enabled": true,
    "editor.lineHeight": 22,
    "editor.lineNumbers": "on",
    "editor.links": true,
    "editor.matchBrackets": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "mouseover",
    "editor.minimap.side": "left",
    "editor.parameterHints": true,
    "editor.renderControlCharacters": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.roundedSelection": false,
    "editor.rulers": [80, 120],
    "editor.scrollBeyondLastLine": false,
    "editor.selectionHighlight": true,
    "editor.smoothScrolling": false,
    "editor.showFoldingControls": "mouseover",
    "editor.tabSize": 4,
    "editor.trimAutoWhitespace": true,
    "editor.useTabStops": true,
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80,

    // Files
    "files.autoGuessEncoding": true,
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true
    },
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": false,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/__pycache__/**": true
    },

    // Git
    "git.enabled": true,

    // Markdown
    "markdown.preview.breaks": false,
    "markdown.preview.doubleClickToSwitchToEditor": true,
    "markdown.preview.fontFamily": "BlinkMacSystemFont",
    "markdown.preview.fontSize": 14,
    "markdown.preview.lineHeight": 1.6,
    "markdown.preview.linkify": true,
    "markdown.preview.markEditorSelection": true,
    "markdown.preview.scrollEditorWithPreview": true,
    "markdown.preview.scrollPreviewWithEditor": true,

    // Python
    "python.formatting.formatOnSave": false,
    "python.linting.enabled": true,
    "python.linting.enabledWithoutWorkspace": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/usr/local/bin/flake8",
    "python.linting.lintOnSave": true,
    "python.linting.lintOnTextChange": true,
    "python.linting.mypyEnabled": false,
    "python.linting.mypyPath": "/usr/local/bin/mypy",
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Path": "/usr/local/bin/pycodestyle",
    "python.linting.prospectorEnabled": false,
    "python.linting.prospectorPath": "/usr/local/bin/prospector",
    "python.linting.pydocstyleEnabled": false,
    "python.linting.pydocstylePath": "/usr/local/bin/pydocstyle",
    "python.linting.pylamaEnabled": false,
    "python.linting.pylamaPath": "/usr/local/bin/pylama",
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.pythonPath": "/usr/local/bin/python3",
    "python.unitTest.pyTestEnabled": true,
    "python.unitTest.pyTestPath": "/usr/local/bin/py.test",

    // Search
    "search.useIgnoreFiles": true
}
